<theme>
	<include>./_inc/systems/metadata-global/_default.xml</include>
	<include>./_inc/systems/metadata-custom/_default.xml</include>
	<include>./_inc/systems/metadata-global/${system.theme}.xml</include>
	<include>./_inc/coversize-basic-grid-variables/${systemCoverSize}.xml</include>
	<include>./variables.xml</include>


	<aspectRatio name="16:9">
		<include>./game-list-grid-16-9.xml</include>
	</aspectRatio>
	<aspectRatio name="4:3">
		<include>./game-list-grid-4-3.xml</include>
	</aspectRatio>
	<aspectRatio name="1:1">
		<include>./game-list-grid-1-1.xml</include>
	</aspectRatio>



	<include>./system_view.xml</include>
	<include>./grid_view.xml</include>


	<!--Hide help-->
	<view name="system,gamelist">
		<helpsystem name="help">
			<origin>0 0</origin>
			<pos>1 1</pos>
			<opacity>0</opacity>
		</helpsystem>
		<systemstatus name="systemstatus">
			<origin>0 0</origin>
			<pos>0.05 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<height>0.02</height> 
			<color>ADADAD</color>
		</systemstatus>
		<clock name="clock">
			<origin>0 0</origin>
			<pos>0.005 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<fontSize>0.02</fontSize> 
			<color>ADADAD</color>
		</clock>
	</view>

</theme>
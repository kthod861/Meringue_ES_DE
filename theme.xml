<theme>
	<include>./_inc/systems/metadata-global/_default.xml</include>
	<include>./_inc/systems/metadata-global/${system.theme}.xml</include>
	<include>./_inc/coversize-basic-grid-variables/${systemCoverSize}.xml</include>
	<include>./variables.xml</include>
	<include>./system_view.xml</include>
	<include>./grid_view.xml</include>


	<!--Hide help-->
	<view name="system,gamelist">
		<helpsystem name="help">
			<origin>0 0</origin>
			<pos>1 1</pos>
			<opacity>0</opacity>
		</helpsystem>
		<systemstatus name="systemstatus">
			<origin>0 0</origin>
			<pos>0.07 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<height>0.025</height> 
			<color>ADADAD</color>
		</systemstatus>
		<clock name="clock">
			<origin>0 0</origin>
			<pos>0.005 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<fontSize>0.025</fontSize> 
			<color>ADADAD</color>
		</clock>
	</view>

</theme>